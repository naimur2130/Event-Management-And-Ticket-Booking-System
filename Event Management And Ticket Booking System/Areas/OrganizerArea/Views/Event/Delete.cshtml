@model Event_Management_And_Ticket_Booking_System.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Event</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger mb-3">Are you sure you want to delete this event?</h5>

                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.EventDescription</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.EventCategory?.CategoryName</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">@Model.EventLocation</dd>

                        <dt class="col-sm-4">Start</dt>
                        <dd class="col-sm-8">@Model.EventStartUtc.ToString("g")</dd>

                        <dt class="col-sm-4">End</dt>
                        <dd class="col-sm-8">@Model.EventEndUtc.ToString("g")</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == Event_Management_And_Ticket_Booking_System.Models.EventStatus.Published ? "bg-success" : Model.Status == Event_Management_And_Ticket_Booking_System.Models.EventStatus.Cancelled ? "bg-danger" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-sm-4">Banner</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.BannerImagePath))
                            {
                                <img src="@Model.BannerImagePath" class="img-thumbnail" style="max-height:200px;" />
                            }
                            else
                            {
                                <span class="text-muted">No banner uploaded</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="DeleteConfirm" method="post">
                        <input type="hidden" asp-for="EventId" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted small">
                    Created @Model.CreatedAt.ToString("g")
                </div>
            </div>
        </div>
    </div>
</div>
