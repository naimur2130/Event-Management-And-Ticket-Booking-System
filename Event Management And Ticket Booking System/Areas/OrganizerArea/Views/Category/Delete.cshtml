@model Event_Management_And_Ticket_Booking_System.Models.EventCategory

@{
    ViewData["Title"] = "Delete Category";
}

<!-- Page wrapper with subtle gradient -->
<div class="min-vh-100 d-flex justify-content-center align-items-center"
     style="background: linear-gradient(135deg, #ffe6e6 0%, #ffd6d6 100%);">

    <!-- Centered card for deletion confirmation -->
    <div class="card shadow-lg p-4 rounded-4" style="width: 100%; max-width: 500px; background-color: rgba(255,255,255,0.95);">
        <h2 class="card-title text-center mb-4 text-danger">Delete Category</h2>

        <div class="alert alert-warning text-center fw-bold">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Are you sure you want to delete this category?
        </div>

        <div class="card shadow-sm p-3 mb-4">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">ID</dt>
                <dd class="col-sm-8">@Model.CategoryId</dd>

                <dt class="col-sm-4 fw-semibold">Category Name</dt>
                <dd class="col-sm-8">@Model.CategoryName</dd>

                <dt class="col-sm-4 fw-semibold">Description</dt>
                <dd class="col-sm-8">@Model.CategoryDescription</dd>
            </dl>
        </div>

        <form asp-action="CategoryDelete" method="post" class="d-flex justify-content-center">
            <input type="hidden" asp-for="CategoryId" />
            <button type="submit" class="btn btn-danger btn-lg me-2">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
