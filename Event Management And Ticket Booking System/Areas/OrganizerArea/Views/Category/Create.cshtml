@model Event_Management_And_Ticket_Booking_System.Models.EventCategory

@{
    ViewData["Title"] = "Create Category";
}

<div class="min-vh-100 d-flex justify-content-center align-items-center"
     style="background: linear-gradient(135deg, #89f7fe 0%, #66a6ff 100%);">

    <div class="card shadow-lg p-4 rounded-4" style="width: 100%; max-width: 500px; background-color: rgba(255, 255, 255, 0.95);">
        <h2 class="card-title text-center mb-4 text-primary">Add New Category</h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="CategoryName" class="form-label fw-bold"></label>
                <input asp-for="CategoryName" class="form-control form-control-lg" placeholder="Enter category name" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryDescription" class="form-label fw-bold"></label>
                <textarea asp-for="CategoryDescription" class="form-control form-control-lg" rows="4" placeholder="Enter description"></textarea>
                <span asp-validation-for="CategoryDescription" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg me-2">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
